<h1>Porções Cadastradas para <%= @dish.name %></h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @portions.each do |portion| %>
      <tr>
        <td><%= portion.description %></td>
        <td>R$ <%= portion.price_whole %>,<%= portion.price_cents %></td>
        <td>
          <%= link_to 'Mostrar', restaurant_dish_portion_path(@restaurant, @dish, portion) %>
          <%= link_to 'Editar', edit_restaurant_dish_portion_path(@restaurant, @dish, portion) %>
          <%= link_to 'Deletar', restaurant_dish_portion_path(@restaurant, @dish, portion), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to 'Cadastrar nova porção', new_restaurant_dish_portion_path(@restaurant, @dish) %></p>