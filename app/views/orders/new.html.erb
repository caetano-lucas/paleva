<div class="container mt-5">
  <h1><%= I18n.t('orders.new_order') %>:</h1>
  <p><%= I18n.t('orders.client_info') %>:</p>

  <%= form_with(model: [@restaurant, @order], local: true) do |f| %>
    <div class="form-group">
      <ul class="list-unstyled">
        <li class="mb-3">
          <%= f.label :client_name, class: "form-label" %>
          <%= f.text_field :client_name, required: true, class: "form-control" %>
        </li>
        <li class="mb-3">
          <%= f.label :cpf, 'CPF', class: "form-label" %>
          <%= f.text_field :cpf, required: false, class: "form-control" %>
        </li>
        <li class="mb-3">
          <%= f.label :phone, class: "form-label" %>
          <%= f.text_field :phone, required: false, class: "form-control" %>
        </li>
        <li class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, required: false, class: "form-control" %>
        </li>
      </ul>
      <div class="form-group mt-4">
        <%= f.submit I18n.t('orders.start_order'), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
