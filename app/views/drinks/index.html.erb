<h1>Lista de Bebidas</h1>
<p><%= link_to 'Cadastrar nova Bebida', new_restaurant_drink_path %></p>

<% if @drinks.present? %> 
  <table>
    <thead>
    <tr>
        <th> Foto </th>
        <th>Nome da Bebida</th>
        <th>Descrição</th>
        <th>Possui Álcool</th>
        <th>Status</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
      <% @drinks.each do |d| %>
        <tr>
          <td>
            <% if d.image.attached? %>
              <%= image_tag d.image, size: "100x100", alt: d.name %>
            <% else %>
              <p>Sem imagem disponível</p>
            <% end %>
          </td>
          <td> <%= d.name %> </td>
          <td> <%= d.description %> </td>
          <td> <%= d.alcohol ? 'Sim' : 'Não'  %> </td>
          <td> <%= I18n.translate(d.status) %></td>
          <td> <%= link_to "Editar #{d.name}", edit_restaurant_drink_path(current_user.restaurant, d) %> |
          <%= link_to "Detalhes #{d.name}", restaurant_drink_path(current_user.restaurant, d) %> </td> 
        </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não há bebidas cadastradas</p>
<% end %>
