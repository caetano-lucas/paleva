<h1>Adicione as informações da bebida: </h1>
<% if @drink.errors.any? %>
  <ul>
    <% @drink.errors.full_messages.each do |msg | %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [current_user.restaurant, @drink]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :alcohol %>
  <%= f.check_box :alcohol %>
  <%= f.submit 'Salvar Bebida' %>
<% end %>