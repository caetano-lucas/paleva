<div class="container mt-5">
  <h1><%= I18n.t('features.add_info') %></h1>

  <%= link_to I18n.t('features.new_feature'), new_restaurant_feature_path, class: 'btn btn-success mb-3' %>

  <% if @features.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= Feature.human_attribute_name(:name) %></th>
        </tr>
      </thead>
      <tbody>
        <% @features.each do |feature| %>
          <tr>
            <td><%= feature.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><%= I18n.t('features.no_feature') %></p>
  <% end %>
</div>
