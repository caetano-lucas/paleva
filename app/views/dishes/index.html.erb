<h1>Lista de Pratos</h1>
<p><%= link_to 'Cadastrar novo prato', new_restaurant_dish_path%></p>
<% if @dishes.present? %> 
<table>
   <thead>
   <tr>
       <th> Foto </th>
       <th>Nome do Prato</th>
       <th>Descrição</th>
       <th>Ações</th>
   </tr>
   </thead>
   <tbody>
    <% @dishes.each do |d| %>
      <tr>
        <td>
          <% if d.image.attached? %>
            <%= image_tag d.image, size: "100x100", alt: d.name %>
          <% else %>
            <p>Sem imagem disponível</p>
          <% end %>
        </td>
        <td> <%= d.name %> </td>
        <td> <%= d.description %> </td>
        <td> <%= link_to "Editar #{d.name}", edit_restaurant_dish_path(current_user.restaurant, d) %> |
         <%= link_to "Detalhes #{d.name}", restaurant_dish_path(current_user.restaurant, d) %> </td>
      </tr>
   <% end %>
   </tbody>
</table>
<% else %>
  <p>Não há pratos cadastrados</p>
<% end %>