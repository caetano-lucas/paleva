<h1>Pratos encontrados: <%= @find %> </h1>
<p><%= link_to 'Cadastrar novo prato', new_restaurant_dish_path %></p>
<% if @dishes.present? %> 

  <table>
    <thead>
    <tr>
        <th> Foto </th>
        <th>Nome do Prato</th>
        <th>Descrição</th>
        <th>Calorias</th>
        <th>Status</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
      <% @dishes.each do |dish| %>
        <tr>
          <td>
            <% if dish.image.attached? %>
              <%= image_tag dish.image, size: "100x100", alt: dish.name %>
            <% else %>
              <p>Sem imagem disponível</p>
            <% end %>
          </td>
          <td> <%= dish.name %> </td>
          <td> <%= dish.description %> </td>
          <td> <%= dish.calories %> </td>
          <td> <%= I18n.translate(dish.status) %></td>
          <td> <%= link_to "Editar #{dish.name}", edit_restaurant_dish_path(current_user.restaurant, dish) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Nenhum prato encontrado</h1>
<% end %>