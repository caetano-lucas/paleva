<h1>Adicione as informações do prato: </h1>
<% if @dish.errors.any? %>
  <ul>
    <% @dish.errors.full_messages.each do |msg | %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [current_user.restaurant, @dish]) do  |f|  %>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :calories%>
  <%= f.text_field :calories %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit 'Salvar Prato' %>
<% end %>

<td> <%= button_to "Deletar prato", restaurant_dish_path(current_user.restaurant, @dish), method: :delete %> </td>