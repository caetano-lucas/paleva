<h1>Adicione as informações do prato: </h1>
<% if @dish.errors.any? %>
  <ul>
    <% @dish.errors.full_messages.each do |msg | %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @dish) do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :calories%>
  <%= f.text_field :calories %>
  <%= f.submit 'Salvar Prato' %>
<% end %>