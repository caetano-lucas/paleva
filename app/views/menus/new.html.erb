<div class="container mt-5">
  <h1><%= I18n.t('menus.new_menu') %>:</h1>

  <%= form_with(model: [@restaurant, @menu], local: true) do |f| %>
    <div class="form-group">
      <dl>
        <dt><%= f.label :name, class: 'form-label' %></dt>
        <dd><%= f.text_field :name, required: true, class: 'form-control' %></dd>
      </dl>
    </div>
    <div class="form-group mt-3">
      <%= f.submit I18n.t('menus.save_menu'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
