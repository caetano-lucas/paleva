<h1><%= I18n.t('operating_hours.hours_list')%></h1>

<%= link_to I18n.t('operating_hours.new_hour'), new_restaurant_operating_hour_path(current_user.restaurant) %>
<% if @operating_hours.present? %>
<table>
  <thead>
    <tr>
      <th><%= I18n.t('.day')%></th>
      <th><%= I18n.t('operating_hours.open_hour')%></th>
      <th><%= I18n.t('operating_hours.close_hour')%></th>
      <th><%= I18n.t('operating_hours.closed')%>?</th>
      <th><%= I18n.t('.action')%></th>
    </tr>
  </thead>
  <tbody>
    <% @operating_hours.each do |hour| %>
      <tr>
        <td><%= hour.day.humanize %></td>
        <td><%= hour.open_time.strftime("%H:%M") %></td>
        <td><%= hour.close_time.strftime("%H:%M") %></td>
        <td><%= hour.closed ? 'Sim' : 'NÃ£o' %></td>
        <td>
          <%= link_to I18n.t('.edit'), edit_restaurant_operating_hour_path(current_user.restaurant, hour) %>
          <%= button_to I18n.t('.exclude'), restaurant_operating_hour_path(current_user.restaurant,hour), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p><%= I18n.t('operating_hours.no_hour')%></p>
<% end %>