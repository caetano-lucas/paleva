<div class="container mt-5">
  <h1><%= I18n.t('operating_hours.edit_operating_hour') %></h1>

  <%= form_with(model: [@restaurant, @operating_hour]) do |form| %>
    <div class="form-group">
      <%= form.label :day %>
      <%= form.select :day, options_for_select(%w[segunda-feira terça-feira quarta-feira quinta-feira sexta-feira sábado domingo]), {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :open_time %>
      <%= form.time_select :open_time, { ampm: true } %>
    </div>
    <div class="form-group">
      <%= form.label :close_time %>
      <%= form.time_select :close_time, { ampm: true }%>
    </div>
    <div class="form-group form-check">
      <%= form.check_box :closed, class: 'form-check-input' %>
      <%= form.label :closed, "#{I18n.t('operating_hours.closed')}?", class: 'form-check-label' %>
    </div>
    <div>
      <%= form.submit I18n.t('.save'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
