<h2><%= I18n.t('restaurants.new_restaurant')%></h2>
<% if @restaurant.errors.any? %>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @restaurant) do |f| %>
  <div>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>
  </div>
  <div>
    <%= f.label :legal_name %>
    <%= f.text_field :legal_name %>
  </div>
  <div>
    <%= f.label :cnpj %>
    <%= f.text_field :cnpj %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <%= f.submit I18n.t('restaurants.save_restaurant') %>
<% end %>